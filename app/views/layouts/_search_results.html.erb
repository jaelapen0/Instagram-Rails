<%= turbo_frame_tag "search_results" do %>
  <% users.each do |user| %>
    <li class="mt-3">
      <div class="d-flex justify-content-between">
        <div class="d-flex">
              <%= image_tag user.profile_pic.attached? ? user.profile_pic : 'user-pp.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem; max-height:2.5rem" %>
            <div class="d-flex flex-column mx-3 justify-content-center">
            
              <small class="fw-bold" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width:10rem"> <%= link_to user, class: "a-decoration-none", data: {turbo: 'false'} do %><%= user.username %> <% end %> </small>
            </div>
        </div>

      </div>
    </li>
  <% end %>
<% end %>